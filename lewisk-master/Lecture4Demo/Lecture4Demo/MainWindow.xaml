<Window x:Class="Lecture4Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lecture4Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="TempLabel" Content="Celsius" HorizontalAlignment="Left" Margin="73,39,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="CelsiusTextBox" HorizontalAlignment="Left" Height="23" Margin="124,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ConvertButton" Content="Convert" HorizontalAlignment="Left" Margin="88,112,0,0" VerticalAlignment="Top" Width="75" Click="ConvertButton_Click"/>
        <Label x:Name="FahrenheitLabel" Content="Fahrenheit" HorizontalAlignment="Left" Margin="73,190,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="FahrenheitTextBox" HorizontalAlignment="Left" Height="23" Margin="139,190,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Canvas x:Name="FahrenheitCanvas" HorizontalAlignment="Left" Height="100" Margin="284,190,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
