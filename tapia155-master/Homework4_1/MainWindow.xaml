        <Button x:Name="button_calcBMI" Content="Calculate BMI" HorizontalAlignment="Left" Margin="341,158,0,0" VerticalAlignment="Top" Width="120" Click="Button_Click"/>
        <Label x:Name="label_result" Content="" HorizontalAlignment="Left" Margin="341,177,0,0" VerticalAlignment="Top" Height="27" Width="298"/>

    </Grid>
</Window>
